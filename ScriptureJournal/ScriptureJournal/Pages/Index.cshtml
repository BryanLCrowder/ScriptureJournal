@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
   <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
<style>
    body {font-family: 'Montserrat', sans-serif;}
</style>
<body>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="https://media.ldscdn.org/images/media-library/gospel-art/book-of-mormon/christ-teaching-nephites-39665-gallery.jpg" alt="Christ and the Nephites" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        God has a plan for all of us!<br />
                        <a class="btn btn-default" href="https://lds.org">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="https://media.ldscdn.org/images/media-library/gospel-art/church-history/pioneers-crossing-river-37725-gallery.jpg" alt="Pioneers Crossing the River" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Learn more about how others sacrificed fo the church to be here today.<br />
                        <a class="btn btn-default" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="https://media.ldscdn.org/images/media-library/gospel-art/church-history/the-8-witnesses-404871-gallery.jpg" alt="The Gold Plates" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        The Golden Plates were critical to our beilefs.
                        <a class="btn btn-default" href="https://lds.org">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</body>